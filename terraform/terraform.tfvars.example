# Production environment configuration
# Copy this to terraform.tfvars and fill in the values

aws_region   = "ap-northeast-2"
environment  = "prod"
project_name = "time2gather"

# Domain
domain_name = "time2gather.org"

# EC2
instance_type = "t3.small"
key_name      = "YOUR_KEY_PAIR_NAME" # Replace with your EC2 key pair name

# Ports
frontend_port = 3000
backend_port  = 8080

# Existing resources
# If you have an existing VPC, uncomment and set the ID
# existing_vpc_id = "vpc-xxxxxxxxx"

# ACM Certificate ARN (required for HTTPS)
# Get this from AWS Console: ACM > Certificates
existing_certificate_arn = "arn:aws:acm:ap-northeast-2:YOUR_ACCOUNT_ID:certificate/YOUR_CERT_ID"
